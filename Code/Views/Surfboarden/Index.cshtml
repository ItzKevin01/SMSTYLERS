@model IEnumerable<smstylers.Models.Surfboards>

@{
    ViewData["Title"] = "Index";
}
<div class="container" style="margin-top: 20px !important;">
    <h1>Admin - Surfboarden</h1>

    <p>
        <a asp-action="Create">Nieuw product</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Beschrijving)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AfbeeldingsUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Materiaal.Naam)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beschrijving)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prijs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AfbeeldingsUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Materiaal.Naam)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Bewerken</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
